package {
    default_team: "trendy_team_fwk_uwb",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

aconfig_declarations {
    name: "uwb_aconfig_flags",
    package: "com.android.uwb.flags",
    container: "com.android.uwb",
    srcs: ["uwb_flags.aconfig"],
}

java_aconfig_library {
    name: "uwb_aconfig_flags_lib",
    aconfig_declarations: "uwb_aconfig_flags",
    min_sdk_version: "33",
    apex_available: [
        "com.android.uwb",
    ],
}

java_library {
    name: "uwb_flags_lib",
    sdk_version: "system_current",
    min_sdk_version: "33",
    srcs: [
        "lib/**/*.java",
    ],
    static_libs: [
        "uwb_aconfig_flags_lib",
    ],
    apex_available: [
        "com.android.uwb",
    ],
    installable: false,
    visibility: [
        "//packages/modules/Uwb:__subpackages__",
        "//external/uwb:__subpackages__",
    ],
}

// The build rules below are currently unused, as usage of "libuwb_aconfig_flags_rust" and
// "libuwb_aconfig_flags_rust_test" was removed as part of b/329709371.
rust_aconfig_library {
    name: "libuwb_aconfig_flags_rust",
    crate_name: "uwb_aconfig_flags_rust",
    aconfig_declarations: "uwb_aconfig_flags",
    min_sdk_version: "33",
    apex_available: [
        "//apex_available:platform",
        "com.android.uwb",
    ],
    host_supported: true,
    visibility: [
        "//packages/modules/Uwb:__subpackages__",
        "//external/uwb:__subpackages__",
    ],
}

rust_aconfig_library {
    name: "libuwb_aconfig_flags_rust_test",
    crate_name: "uwb_aconfig_flags_rust_test",
    aconfig_declarations: "uwb_aconfig_flags",
    min_sdk_version: "33",
    host_supported: true,
    visibility: [
        "//packages/modules/Uwb:__subpackages__",
        "//external/uwb:__subpackages__",
    ],
    mode: "test",
}
